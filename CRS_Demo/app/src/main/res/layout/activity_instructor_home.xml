<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.home.startup.crs_demo.instructorHome"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="user"
        android:id="@+id/iusername"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="35sp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iassignedCourses"
        android:layout_marginTop="65dp"
        android:textSize="35sp"
        android:layout_below="@+id/iusername"
        android:layout_centerHorizontal="true"
        android:text="Assigned Courses"
        android:padding="20dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iaddStudent"
        android:textSize="35sp"
        android:text="Add Student"
        android:padding="20dp"
        android:layout_below="@+id/iassignedCourses"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iremoveStudent"
        android:textSize="35sp"
        android:text="Remove Student"
        android:padding="20dp"
        android:layout_below="@+id/iaddStudent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iassigngrades"
        android:textSize="35sp"
        android:text="Assign Grades"
        android:padding="20dp"
        android:layout_below="@+id/iremoveStudent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iviewProfile"
        android:textSize="35sp"
        android:text="View / Edit Profile"
        android:padding="20dp"
        android:layout_below="@+id/iassigngrades"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ilogout"
        android:textSize="35sp"
        android:text="Logout"
        android:padding="20dp"
        android:layout_below="@+id/iviewProfile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />
</RelativeLayout>
